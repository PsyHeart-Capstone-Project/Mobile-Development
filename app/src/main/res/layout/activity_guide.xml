<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionnaire.GuideActivity">

  <TextView
      android:id="@+id/questionnaireGuide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="188dp"
      android:layout_marginTop="76dp"
      android:gravity="center"
      android:text="@string/questionnaire_guide"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/questionnaireGuideTextView1"
      android:layout_width="558dp"
      android:layout_height="86dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="144dp"
      android:text="@string/questionnaire_guide_text_1"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/questionnaireGuideTextView2"
      android:layout_width="549dp"
      android:layout_height="77dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="256dp"
      android:text="@string/questionnaire_guide_text_2"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/questionnaireGuideTextView3"
      android:layout_width="556dp"
      android:layout_height="61dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="352dp"
      android:text="@string/questionnaire_guide_text_3"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button_next"
      android:layout_width="556dp"
      android:layout_height="65dp"
      android:backgroundTint="@color/blue"
      android:padding="16dp"
      android:text="@string/next_button_text"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/questionnaireGuideTextView3" />

</androidx.constraintlayout.widget.ConstraintLayout>